@model List<ProdutoModel>
@{
    ViewData["Title"] = "Listagem de Produtos";
}
<div class="text-center">
    <h1>Listagem de Produtos</h1>

    <table class="table">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Descrição</th>
              <th scope="col">Valor Unitário</th>
              <th scope="col">Acao</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
                foreach (ProdutoModel produto in Model)
                {
                    <tr>
                      <th scope="row">@produto.IdProduto</th>
                      <td>@produto.Descricao</td>
                      <td>@produto.VlrUnitario</td>
                      <td>
                          <div class="btn-group" role="group">
                              <a role="button" class="btn btn-primary" asp-route-id="@produto.IdProduto" asp-controller="Produto" asp-action="EditarProduto">Editar</a>
                              <a role="button" class="btn btn-danger" asp-route-id="@produto.IdProduto" asp-controller="Produto" asp-action="DeletarProduto">Remover</a>
                          </div>
                      </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div>
        <a class="btn btn-success" role="button" asp-controller="Produto" asp-action="CriarProduto">Adicionar novo Produto</a>
    </div>
</div>
</html>