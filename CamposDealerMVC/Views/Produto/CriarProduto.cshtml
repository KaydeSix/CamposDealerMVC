@model ProdutoModel
@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<div class="text-center">
    <h1>Cadastrar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="AdicionarProduto" method="post">
    <div class="mb-3">
        <label for="Descricao" class="form-label">Descrição</label>
        <input type="text" required asp-for="Descricao" class="form-control" id="inputDescricao" placeholder="Descreva o produto">
    </div>
    <div class="mb-3">
        <label for="VlrUnitario" class="form-label">Valor Unitário</label>
        <input type="number" required asp-for="VlrUnitario" class="form-control" id="inputVlrUnitario" placeholder="Valor unitário do produto">
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Produto" asp-action="Produto">Voltar</a>
</form>